						<button type="button" class="btn btn-info btn-sm">
						  	Edit song
						</button>
						<button type="button" class="btn btn-danger btn-sm">
						  	Delete song from *[Artist], [Album], [Playlist]*
						</button>
					</div>
				</div>
			  </li>

			  <li class="list-group-item">
			  	Song Title 2
			  	<div class="mt-1">
				  	<div class="btn-group float-right">
						<button type="button" class="btn btn-info btn-sm">
						  	Edit song
						</button>
						<button type="button" class="btn btn-danger btn-sm">
						  	Delete song from *[Artist], [Album], [Playlist]*
						</button>
					</div>
				</div>
			  </li>

			  <li class="list-group-item">
			  	Song Title 3
